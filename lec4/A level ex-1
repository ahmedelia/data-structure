/* problem 5 from midterm 1 in Kartikâ€™s textbook */
public class IntList {
	public int first;
	public IntList rest;

	public IntList(int f, IntList r) {
		first = f;
		rest = r;
	}
	public void printList(){
 	    IntList head = this;
 	    while (head != null){
 	        System.out.print(head.first + " ");
 	        head = head.rest;
 	    }
	}
	private void Adjacent(IntList head){
	    if (head == null)
	        return;
	    while (head != null){
	        if (head.rest != null && head.first == head.rest.first){
	            head.first *= 2;
	            head.rest = (head.rest).rest;
	            Adjacent(head);
	        }
	        head = head.rest;
	    }
	}
	public void Add_Adjacent(){
	    Adjacent(this);
	}
	public static void main(String[] args) {
 	/* Creates a list of one integer, namely 10 */
 	IntList x = new IntList(4, null);
 	x = new IntList(2, x);
 	x = new IntList(1, x);
 	x = new IntList(1, x);
 	x = new IntList(3, x);
 	x = new IntList(2, x);
 	x = new IntList(1, x);
 	x = new IntList(1, x);
 	x.printList();
 	System.out.println("#");
 	x.Add_Adjacent();
 	x.printList();
 	}
}
